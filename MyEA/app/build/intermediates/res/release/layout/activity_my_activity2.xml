<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.MyEA.myea.MyActivity2"
    android:background="#CCCCFF"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter an "
        android:id="@+id/Choice"
        android:textSize="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Radio1"
        android:minHeight="50dp"
        android:layout_below="@+id/Sit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fire"
            android:id="@+id/Fire"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="#ffe90f00" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earthquake"
            android:id="@+id/Earth"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="#ff8c5e12" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tsunami"
            android:id="@+id/Water"
            android:checked="false"
            android:textSize="30dp"
            android:textColor="#ff1423a9" />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emergency"
        android:id="@+id/Emer"
        android:layout_gravity="center_horizontal"
        android:textSize="38dp"
        android:textColor="#000000"
        android:layout_below="@+id/Choice"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="monospace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Situation"
        android:id="@+id/Sit"
        android:layout_gravity="center_horizontal"
        android:textSize="38dp"
        android:textColor="#000000"
        android:layout_below="@+id/Emer"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/submit_area"
        android:layout_gravity="center_horizontal"
        android:textSize="28dp"
        android:layout_below="@+id/Radio1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
