<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.MyEA.myea.MyActivity3"
    android:background="#CCCCFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emergency"
        android:id="@+id/FireCall"
        android:textSize="45dp"
        android:singleLine="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(02)426-0219"
        android:id="@+id/numBFP"
        android:textSize="30dp"
        android:layout_below="@+id/FireDept"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bureau of Fire Protection"
        android:id="@+id/FireDept"
        android:textSize="25dp"
        android:textColor="#ffe90f00"
        android:layout_below="@+id/CallFire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/CallDept"
        android:layout_toEndOf="@+id/numBFP"
        android:layout_alignTop="@+id/numBFP"
        android:layout_toRightOf="@+id/numBFP"
        android:layout_alignRight="@+id/callRC"
        android:layout_alignEnd="@+id/callRC" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NDRRMC"
        android:id="@+id/ND"
        android:layout_below="@+id/CallDept"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ffe90f00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(02)911-5061"
        android:id="@+id/numND"
        android:layout_below="@+id/ND"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/callND"
        android:layout_alignTop="@+id/numND"
        android:layout_toRightOf="@+id/numND"
        android:layout_toEndOf="@+id/numND"
        android:layout_alignRight="@+id/CallDept"
        android:layout_alignEnd="@+id/CallDept" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Cross"
        android:id="@+id/rc"
        android:layout_below="@+id/numND"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ffe90f00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="143"
        android:id="@+id/numRC"
        android:layout_below="@+id/rc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/callRC"
        android:layout_alignTop="@+id/numRC"
        android:layout_toRightOf="@+id/numND"
        android:layout_toEndOf="@+id/numND"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotlines"
        android:id="@+id/CallFire"
        android:layout_below="@+id/FireCall"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#000000" />

</RelativeLayout>
