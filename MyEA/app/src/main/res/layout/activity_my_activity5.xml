<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.project.MyEA.myea.MyActivity5"
    android:background="#CCCCFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emergency"
        android:id="@+id/WaterCall"
        android:textSize="45dp"
        android:singleLine="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotlines"
        android:id="@+id/callWater"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textSize="45dp"
        android:textColor="#000000"
        android:layout_below="@+id/WaterCall"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manila Water Hotlines"
        android:id="@+id/MWH"
        android:layout_below="@+id/callWater"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#ff1423a9"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(02)1627"
        android:id="@+id/numMWL"
        android:textSize="30dp"
        android:layout_alignTop="@+id/callMWH"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/callMWH"
        android:layout_below="@+id/MWH"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Philippine Coast Guard"
        android:id="@+id/PCG"
        android:layout_below="@+id/callMWH"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:textColor="#ff1423a9"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0918964697"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_below="@+id/PCG"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/callPCG"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/PCG"
        android:layout_alignLeft="@+id/callMWH"
        android:layout_alignStart="@+id/callMWH"
        android:layout_alignRight="@+id/callMWH"
        android:layout_alignEnd="@+id/callMWH" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Cross"
        android:id="@+id/RCTwo"
        android:layout_below="@+id/callPCG"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp"
        android:textColor="#ff1423a9"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="143"
        android:id="@+id/numRC2"
        android:layout_below="@+id/RCTwo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/callRC2"
        android:layout_below="@+id/RCTwo"
        android:layout_alignLeft="@+id/callPCG"
        android:layout_alignStart="@+id/callPCG"
        android:layout_alignRight="@+id/callPCG"
        android:layout_alignEnd="@+id/callPCG" />

</RelativeLayout>
